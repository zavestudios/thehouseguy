<div id="myCarousel" class="carousel slide span12" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <% @latest_posts.each_with_index do |post, index| %>
      <div class="<%= index == 0 ? 'carousel-item active' : 'carousel-item' %>">
        <%= image_tag("thumbnail.jpg") if post.carousel_image.nil? %>
        <div class="container">
          <div class="carousel-caption <%= text_style index %>">
            <h1><%= post.title %></h1>
            <p>
              <%= raw post.body.truncate(100) %>
            </p>
            <p>
              <%= link_to 'Read more...', post_path(post.id), class: "btn btn-lg btn-primary" %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
